package vector;

public class VectorFactory {

	public static Vector i = null;
	public static Vector j = null;
	public static Vector k = null;
	
	public VectorFactory(Dimensions dimension) {
		switch(dimension) {
		case THREEDIM:
			i = new Vector(dimension, 1.0, 0.0, 0.0);
			j = new Vector(dimension, 0.0, 1.0, 0.0);
			k = new Vector(dimension, 0.0, 0.0, 1.0);
			break;
		case TWODIM:
			i = new Vector(dimension, 1.0, 0.0, null);
			j = new Vector(dimension, 0.0, 1.0, null);
			break;
		case ONEDIM:
			i = new Vector(dimension, 1.0, null, null);
			break;
		default:
			i = null;
			j = null;
			k = null;
		}
	}
}
