package main;

import java.util.Scanner;

import vector.Dimensions;

public class VecMain {

	public static void main(String[] args) {
		Dimensions dim = Dimensions.TWODIM;
		
		System.out.println("Welcome to Vector Land!");
		String choice = "2D";
		boolean exit = false;
		Scanner keyboard = new Scanner(System.in);
		do {
			System.out.println("Enter dimensional space:\n(\"1D\", \"2D\", or \"3D\", no quotes)");
			choice = keyboard.next();
			switch(choice) {
			case "1d":
			case "1D":
				dim = Dimensions.ONEDIM;
				exit = true;
				break;
			case "2d":
			case "2D":
				dim = Dimensions.TWODIM;
				exit = true;
				break;
			case "3d":
			case "3D":
				dim = Dimensions.THREEDIM;
				exit = true;
				break;
			default:
				System.out.println("Invalid dimensional space; please enter either: \"1D\", \"2D\", or \"3D\", NO quotes");
				break;
			}
		} while(!exit);
		
		choice = "0";
		exit = false;
		
		do {
			System.out.println("How may we serve you?");
			System.out.println("1: add the vectors");
			System.out.println("2: subtract the vectors");
			System.out.println("3: add the vectors");
			System.out.println("4: add the vectors");
			System.out.println("5: add the vectors");
			choice = keyboard.next();
			if (choice == "0"){
				break;
			}
			switch(choice) {
			case "0":
				break;
			case "1":
				break;
			case "2":
				break;
			case "3":
				break;
			case "4":
				break;
			case "5":
				break;
			}
		} while (true);
		
		System.out.println("Completed...");
		keyboard.close();
	}
}
