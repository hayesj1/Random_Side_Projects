package operations;

import java.util.LinkedList;
import java.util.Scanner;

import vector.Dimensions;
import vector.Vector;

public class VectorScanner {
	@SuppressWarnings("rawtypes")
	private LinkedList<Vector> vectors= null;
	
	@SuppressWarnings("rawtypes")
	public VectorScanner(Scanner s, Dimensions dimensions, boolean useMagnitudeConstructor) {
		vectors = new LinkedList<Vector>();
		s.useDelimiter(",\\w");
		while (s.hasNext()) {
			vectors.add(new Vector(dimensions, s.nextDouble(), s.nextDouble()));
		}

		s.reset();
	}
}
